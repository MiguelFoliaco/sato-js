{
  "name": "sato.js",
  "version": "1.2.0",
  "description": "Sato.js is a small utility library that extends native `String` and `Number` prototypes with convenient, expressive properties and methods. It's designed as a tiny syntactic sugar layer for working with strings and time-related number conversions.",
  "main": "index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": "./dist/index.js",
    "./number": "./dist/number/index.js",
    "./string": "./dist/string/index.js"
  },
  "scripts": {
    "publish": "tsc --build && npm publish",
    "release": "standard-version",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "prepare": "husky",
    "build": "tsc --build",
    "coverage": "vitest run --coverage"
  },
  "keywords": [
    "sato",
    "string",
    "number",
    "sugar",
    "easy",
    "syntactic",
    "expressive",
    "syntactic sugar"
  ],
  "author": "Miguel Angel Foliaco Gomez",
  "license": "MIT",
  "type": "commonjs",
  "homepage": "https://github.com/MiguelFoliaco/sato-js",
  "repository": {
    "type": "github",
    "url": "https://github.com/MiguelFoliaco/sato-js"
  },
  "bugs": {
    "email": "foliaco18@gmail.com",
    "url": "https://github.com/MiguelFoliaco/sato-js/issues"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@vitest/coverage-v8": "^4.0.14",
    "husky": "^9.1.7",
    "standard-version": "^9.5.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  }
}
